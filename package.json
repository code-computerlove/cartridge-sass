{
  "name": "cartridge-sass",
  "version": "1.0.0",
  "description": "Sass module for the cartridge project",
  "engines": {
    "node": ">=4.4.*"
  },
  "keywords": [
    "gulp",
    "dependency",
    "cartridge",
    "cartridge-module",
    "cartridge-task",
    "sass",
    "libsass",
    "postcss"
  ],
  "homepage": "https://github.com/cartridge/cartridge-sass",
  "bugs": {
    "url": "https://github.com/cartridge/cartridge-sass/issues"
  },
  "license": "MIT",
  "author": "Code ComputerLove <npm@codecomputerlove.co.uk>",
  "main": "task.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/cartridge/cartridge-sass.git"
  },
  "scripts": {
    "postinstall": "node scripts/postinstall.js",
    "preuninstall": "node scripts/preuninstall.js",
    "test": "mocha && npm run lint",
    "lint": "eslint task.js \"**/*.js\"",
    "cover": "npm run check-coverage && open coverage/lcov-report/index.html",
    "report": "npm run report-complexity && open report/index.html",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post",
    "semantic-test": "semantic-release pre",
    "regengold:prod": "USE_PROD=1 node scripts/goldmaster.js",
    "regengold:dev": "USE_PROD=0 node scripts/goldmaster.js",
    "report-complexity": "plato -r -e .eslintrc.json -d report task.js \"_config/*.js\" \"test/**/*.js\"",
    "report-coverage": "cat ./coverage/lcov.info | codecov",
    "check-coverage": "istanbul cover _mocha"
  },
  "dependencies": {
    "autoprefixer": "~7.1.0",
    "cartridge-module-util": "~0.5.1",
    "css-mqpacker": "~5.0.1",
    "cssnano": "~3.10.0",
    "fs-extra": "~2.1.2",
    "gulp-if": "~2.0.1",
    "gulp-postcss": "~6.4.0",
    "gulp-sass": "~3.1.0",
    "gulp-sass-generate-contents": "~0.3.2",
    "gulp-sourcemaps": "~2.6.0",
    "gulp-stylelint": "^3.8.0",
    "merge": "^1.2.0",
    "postcss-minify-selectors": "^2.0.5",
    "postcss-pxtorem": "~4.0.0",
    "stylelint-config-standard": "^16.0.0"
  },
  "devDependencies": {
    "chai": "~3.5.0",
    "chai-fs": "~1.0.0",
    "codecov.io": "~0.1.6",
    "cz-conventional-changelog": "~2.0.0",
    "eslint": "~3.19.0",
    "ghooks": "~2.0.0",
    "gulp": "~3.9.1",
    "istanbul": "~0.4.3",
    "mocha": "~3.2.0",
    "plato": "~1.6.0",
    "semantic-release": "~6.3.2",
    "validate-commit-msg": "~2.12.1"
  },
  "release": {
    "branch": "master"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    },
    "ghooks": {
      "commit-msg": "validate-commit-msg",
      "pre-push": "npm t"
    },
    "validate-commit-msg": {
      "types": [
        "feat",
        "fix",
        "docs",
        "style",
        "refactor",
        "perf",
        "test",
        "build",
        "ci",
        "chore",
        "revert"
      ],
      "warnOnFail": false,
      "maxSubjectLength": 100,
      "subjectPattern": ".+",
      "subjectPatternErrorMsg": "subject does not match subject pattern!",
      "helpMessage": ""
    }
  }
}
